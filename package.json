{
	"name": "kham-api",
	"version": "0.0.0",
	"description": "",
	"author": {
		"email": "samishal.1998@gmail.com",
		"name": "Sami Mis'hal"
	},
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"dev": "npm run start:dev",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"gcloud:submit-build": "gcloud builds submit --tag gcr.io/kham-shop/kham_api --project kham-shop --timeout=5h  --machine-type=N1_HIGHCPU_32",
		"gcloud:deploy": "gcloud run deploy kham_api --region=us-east1 --image=gcr.io/kham-shop/kham_api --project=kham-shop --platform=managed --allow-unauthenticated --memory=1Gi --cpu=1 --port=3000 --no-use-http2",
		"gcloud:new-revision": "yarn gcloud:submit-build && yarn gcloud:deploy",
		"drizzle:migrate": "ts-node ./src/drizzle/migrations.ts"
	},
	"dependencies": {
		"@neondatabase/serverless": "^0.4.22",
		"@nestjs/common": "^10.0.3",
		"@nestjs/core": "^10.0.3",
		"@nestjs/mapped-types": "^2.0.2",
		"@nestjs/passport": "^10.0.0",
		"@nestjs/platform-express": "^10.0.3",
		"@sendgrid/mail": "^7.7.0",
		"axios": "^1.4.0",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.0",
		"drizzle-orm": "^0.27.0",
		"ejs": "^3.1.9",
		"firebase-admin": "^11.9.0",
		"moment": "^2.29.4",
		"passport": "^0.6.0",
		"passport-firebase-jwt": "^1.2.1",
		"pg": "^8.11.0",
		"postgres": "^3.3.5",
		"radash": "^10.8.1",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"rxjs": "^7.8.1",
		"uuid": "^9.0.0",
		"ws": "^8.13.0"
	},
	"devDependencies": {
		"@nestjs/cli": "^8.0.0",
		"@nestjs/schematics": "^8.0.0",
		"@nestjs/swagger": "^6.0.5",
		"@nestjs/testing": "^8.0.0",
		"@types/express": "^4.17.13",
		"@types/jest": "27.5.0",
		"@types/multer": "^1.4.7",
		"@types/node": "^16.0.0",
		"@types/supertest": "^2.0.11",
		"@types/uuid": "^9.0.0",
		"@typescript-eslint/eslint-plugin": "^5.0.0",
		"@typescript-eslint/parser": "^5.0.0",
		"drizzle-kit": "^0.19.2",
		"eslint": "^8.0.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"jest": "28.0.3",
		"prettier": "^2.3.2",
		"source-map-support": "^0.5.20",
		"supertest": "^6.1.3",
		"ts-jest": "28.0.1",
		"ts-loader": "^9.2.3",
		"ts-node": "^10.0.0",
		"tsconfig-paths": "4.0.0",
		"typescript": "^5.1.6"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
